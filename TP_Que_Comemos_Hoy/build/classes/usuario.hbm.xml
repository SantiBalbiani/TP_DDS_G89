<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="usuario.Usuario" table="usuarios">

<id name="idUsuario" column="id">
<generator class="assigned" />
</id>

<property name="nombreUsuario" column="nombre"/>
<property name="password" column="password"/>
<property name="sexo" column="sexo"/>
<property name="fecha_nacimiento" column="fecNac"/>
<property name="complexion" column="complexion"/>
<property name="altura" column="altura"/>

</class>
</hibernate-mapping>